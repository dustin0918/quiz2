<% obj.each do |idea| %>

  <div class="row">
  
  <div class="col-xs-8 col-xs-offset-2">
  
  <div class="well well-lg">
  
  <div class="idea-title">
  
  <%= link_to idea.title, idea_path(idea) %>
  
  </div>
  
  <div class="idea-body">
  
  <%= truncate(idea.description, length: 100) %>
  
  <div class="idea-meta-details">
  
  <small>Created by: <%= idea.user.username if idea.user%>,
  
  <%= time_ago_in_words(idea.created_at) %> ago,
  
  last updated: <%= time_ago_in_words(idea.updated_at) %> ago</small>
  
  </div>
  
  </div>
  <% if logged_in? && (current_user ==idea.user) %>
  <div class="idea-actions">
  
  <%= link_to "Edit this idea", edit_idea_path(idea), class: "btn btn-xs btn-primary" %>
  
  <%= link_to "Delete this idea", idea_path(idea), method: :delete,
  
  data: { confirm: "Are you sure you want to delete the idea?"},
  
  class: "btn btn-xs btn-danger" %>
  
  </div>
  <% end %>
  
  </div>
  
  </div>
  
  </div>
  
  <% end %>